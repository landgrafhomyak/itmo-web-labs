<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <filter>
        <filter-name>filter:404</filter-name>
        <filter-class>ru.landgrafhomyak.itmo.web.impl.apps.lab2.Filter404</filter-class>
    </filter>
    <servlet>
        <servlet-name>servlet:Controller</servlet-name>
        <servlet-class>ru.landgrafhomyak.itmo.web.impl.apps.lab2.ControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet:AreaCheck</servlet-name>
        <servlet-class>ru.landgrafhomyak.itmo.web.impl.apps.lab2.AreaCheckServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>jsp:404</servlet-name>
        <jsp-file>/404.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>jsp:Form</servlet-name>
        <jsp-file>/form.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>jsp:Result</servlet-name>
        <jsp-file>/result.jsp</jsp-file>
    </servlet>

    <filter-mapping>
        <filter-name>filter:404</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>servlet:Controller</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/history.css</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/common.css</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/form.css</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/form.js</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/form.js.map</url-pattern>
    </servlet-mapping>
</web-app>